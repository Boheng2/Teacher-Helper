<!-- Responsible for the add class scene -->
<!-- Controller Class: AddClassController -->
<!-- fx:ids same as variable names that called fxml in the controller class -->

<VBox prefHeight="240.0" prefWidth="600.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddClassController">
   <children>
      <ScrollPane prefHeight="245.0" prefWidth="480.0">
         <content>
            <AnchorPane prefHeight="210.0" prefWidth="588.0">
               <children>
                  <Button layoutX="88.0" layoutY="105.0" mnemonicParsing="false" onAction="#addClassOnList" text="Add" />
                  <Button layoutX="459.0" layoutY="107.0" mnemonicParsing="false" onAction="#confirm" text="Confirm" />
                  <GridPane fx:id="createClassGrid" layoutX="244.0" layoutY="76.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
                  <Label layoutX="280.0" layoutY="47.0" text="Class" />
                  <Label fx:id="errorWarning" layoutX="95.0" layoutY="2.0" prefHeight="47.0" prefWidth="410.0" text="Enter only alphanumerical characters. No White Spaces." />
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
      <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #add8e6;">
         <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Blumelein" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="11.0" fx:id="x3" />
               </font>
            </Label>
            <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
            <Label font="$x3" maxWidth="-1.0" text="Verson 2.1.4" textFill="WHITE" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
   </children>
</VBox>
