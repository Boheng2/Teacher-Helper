<!-- Responsible for the remove student pop up -->
<!-- Controller Class: RemoveStudentController -->
<!-- fx:ids same as variable names that called fxml in the controller class -->

<VBox prefHeight="240.0" prefWidth="600.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RemoveStudentController">
   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="240.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <GridPane fx:id="removeStudentGrid" layoutX="250.0" layoutY="81.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
            <Button layoutX="46.0" layoutY="114.0" mnemonicParsing="false" onAction="#addStudentOnList" text="Add" />
            <Button layoutX="507.0" layoutY="114.0" mnemonicParsing="false" onAction="#confirm" text="Confirm" />
            <Label layoutX="256.0" layoutY="52.0" text="Remove Student" />
         </children>
      </AnchorPane>
      <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #add8e6;">
         <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Blumelein" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="11.0" fx:id="x3" />
               </font>
            </Label>
            <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
            <Label font="$x3" maxWidth="-1.0" text="Verson 2.1.4" textFill="WHITE" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
   </children>
</VBox>
